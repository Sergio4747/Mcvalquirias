      color: white;
      transform: translateY(-3px) rotate(10deg) scale(1.1);
      box-shadow: 0 8px 20px rgba(162, 92, 207, 0.3);
    }

    .nav-toggle {
      display: none;
      background: linear-gradient(135deg, #a25ccf, #8b49ba);
      color: white;
      border: none;
      width: 50px;
      height: 50px;
      border-radius: 12px;
      cursor: pointer;
      font-size: 1.5rem;
