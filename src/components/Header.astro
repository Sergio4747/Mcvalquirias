  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(135deg, #f4f4f4 0%, #e8e8e8 100%);
      min-height: 200vh;
    }

    .header {
      background: linear-gradient(90deg, #f9f5fc, #fff1f9);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      box-shadow: 0 4px 20px rgba(162, 92, 207, 0.15);
      padding: 0 24px;
      height: 80px;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      transform: translateY(0);
      opacity: 1;
      border-bottom: 1px solid rgba(162, 92, 207, 0.1);
    }

    .header.hidden {
      transform: translateY(-100%);
      opacity: 0;
    }

    .header.scrolled {
      height: 70px;
      background: linear-gradient(
        90deg,
        rgba(249, 245, 252, 0.95),
        rgba(255, 241, 249, 0.95)
      );
      box-shadow: 0 8px 32px rgba(162, 92, 207, 0.2);
    }

    .nav {
      width: 100%;
      max-width: 1300px;
      margin: 0 auto;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
    }

    .nav-logo {
      display: flex;
      align-items: center;
      height: 100%;
      z-index: 1001;
    }

    .logo-placeholder {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #a25ccf, #8b49ba);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      font-size: 1.2rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      animation: logoFadeIn 0.8s ease-out;
      font-family: "Cal Sans", sans-serif;
    }

    .logo-placeholder:hover {
      transform: scale(1.05) rotate(-2deg);
      box-shadow: 0 8px 25px rgba(162, 92, 207, 0.3);
    }

    .header.scrolled .logo-placeholder {
      width: 45px;
      height: 45px;
      font-size: 1.1rem;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: 32px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 24px;
      list-style: none;
    }

    .nav-link {
      color: #333;
      text-decoration: none;
      font-weight: 500;
      font-size: 1rem;
      position: relative;
      padding: 8px 16px;
      border-radius: 8px;
      transition: all 0.3s ease;
      opacity: 0;
      transform: translateY(-20px);
      animation: navItemsFadeIn 0.6s ease-out forwards;
    }

    .nav-link:nth-child(1) {
      animation-delay: 0.1s;
    }
    .nav-link:nth-child(2) {
      animation-delay: 0.2s;
    }
    .nav-link:nth-child(3) {
      animation-delay: 0.3s;
    }

    .nav-link::before {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 2px;
      background: linear-gradient(90deg, #a25ccf, #8b49ba);
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }

    .nav-link:hover {
      color: #a25ccf;
      background: rgba(162, 92, 207, 0.05);
      transform: translateY(-2px);
    }

    .nav-link:hover::before {
      width: 80%;
    }

    .nav-btn {
      background: linear-gradient(135deg, #a25ccf, #8b49ba);
      color: white;
      padding: 12px 24px;
      border-radius: 25px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.95rem;
      box-shadow: 0 4px 15px rgba(162, 92, 207, 0.3);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border: none;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateY(-20px);
      animation: btnFadeIn 0.8s ease-out 0.4s forwards;
    }

    .nav-btn::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      transition: left 0.5s;
    }

    .nav-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(162, 92, 207, 0.4);
    }

    .nav-btn:hover::before {
      left: 100%;
    }

    .nav-social {
      display: flex;
      gap: 16px;
      align-items: center;
    }

    .social-icon {
      width: 40px;
      height: 40px;
      background: rgba(162, 92, 207, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #a25ccf;
      text-decoration: none;
      font-size: 1.2rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 0;
      transform: scale(0.8) translateY(-20px);
      animation: socialFadeIn 0.6s ease-out forwards;
    }

    .social-icon:nth-child(1) {
      animation-delay: 0.5s;
    }
    .social-icon:nth-child(2) {
      animation-delay: 0.6s;
    }
    .social-icon:nth-child(3) {
      animation-delay: 0.7s;
    }

    .social-icon:hover {
