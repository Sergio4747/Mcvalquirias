<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<header class="header">
  <nav class="nav">
    <div class="nav-top">
      <div class="nav-logo">
        <img src="/img/logoimg.png" alt="Valquirias Logo" />
      </div>
      <button class="nav-toggle" aria-label="Abrir menú">☰</button>
    </div>

    <!-- Menú para desktop y mobile -->
    <div class="nav-menu">
      <div class="nav-right">
        <a href="/" class="nav-btn">Inicio</a>
        <div class="nav-social">
          <a
            href="https://www.instagram.com"
            target="_blank"
            aria-label="Instagram"
          >
            <img src="/icons/instagram.svg" alt="Instagram" />
          </a>
          <a
            href="https://www.facebook.com"
            target="_blank"
            aria-label="Facebook"
          >
            <img src="/icons/facebook.svg" alt="Facebook" />
          </a>
          <a href="https://www.tiktok.com" target="_blank" aria-label="TikTok">
            <img src="/icons/tiktok.svg" alt="TikTok" />
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  body {
    margin: 0;
    font-family: "Arial", sans-serif;
    background-color: #f4f4f4;
    transition: padding-top 0.3s ease;
  }

  .header {
    background: linear-gradient(90deg, #f9f5fc, #fff1f9);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 0 24px;
    height: 100px;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
  }

  .nav {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .nav-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .nav-logo {
    height: 100px;
    display: flex;
    align-items: center;
  }

  .nav-logo img {
    height: 90%;
    margin-left: 20px;
    object-fit: contain;
    display: block;
    transition: transform 0.3s;
  }

  .nav-logo img:hover {
    transform: scale(1.1) rotate(-1deg);
  }

  .nav-menu {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    background: linear-gradient(90deg, #f9f5fc, #fff1f9);
    padding: 16px 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
    animation: fadeDown 0.3s ease forwards;
  }

  .nav-menu.active {
    display: flex;
  }

  .nav-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .nav-btn {
    background-color: #a25ccf;
    color: white;
    padding: 10px 20px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition:
      background 0.3s,
      transform 0.3s;
    box-shadow: 0 2px 6px rgba(162, 92, 207, 0.3);
  }

  .nav-btn:hover {
    background-color: #8b49ba;
    transform: scale(1.05);
  }

  .nav-social {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-social img {
    height: 32px;
    width: 32px;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    filter: grayscale(20%) brightness(0.9);
  }

  .nav-social img:hover {
    transform: scale(1.25) rotate(5deg);
    filter: grayscale(0%) brightness(1.2);
  }

  .nav-toggle {
    display: none;
    background: #a25ccf;
    color: white;
    border: none;
    font-size: 1.6rem;
    padding: 8px 14px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition:
      background 0.3s,
      transform 0.3s;
  }

  .nav-toggle:hover {
    background: #8b49ba;
    transform: scale(1.1);
  }

  .contenido {
    padding-top: 130px;
    transition: padding-top 0.3s ease;
  }

  /* MOBILE FIX */
  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
    }

    .nav-menu {
      position: absolute;
      top: 100px;
      left: 0;
      width: 100%;
      z-index: 99;
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-right {
      flex-direction: column;
      gap: 8px;
      align-items: center;
    }

    .nav-social {
      margin: 0;
      justify-content: center;
    }

    .nav-btn {
      margin-top: 12px;
    }

    .nav-toggle {
      display: block;
      margin-left: auto;
      margin-right: 12px;
    }

    body.menu-open .contenido {
      padding-top: 250px;
    }
  }

  @media (min-width: 769px) {
    .header {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    .nav-menu {
      display: flex !important;
      flex-direction: row;
      align-items: center;
      justify-content: flex-end;
      background: transparent;
      box-shadow: none;
      padding: 0;
      position: static;
    }

    .nav-right {
      flex-direction: row;
      align-items: center;
      gap: 16px;
    }

    .nav-social {
      display: flex !important;
      margin-right: 60px;
    }

    .nav-btn {
      margin: 0;
    }

    .nav-toggle {
      display: none !important;
    }
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector(".nav-toggle");
    const menu = document.querySelector(".nav-menu");

    if (toggle && menu) {
      toggle.addEventListener("click", () => {
        menu.classList.toggle("active");
        document.body.classList.toggle("menu-open");
      });
    }
  });
</script>
