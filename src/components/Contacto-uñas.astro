---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contacto - Valquirias Uñas</title>
</head>

<section class="contacto">
  <h2>Reservá tu turno para Uñas</h2>
  <p class="intro">
    Este formulario está destinado exclusivamente al local de Uñas.
  </p>

  <form class="formulario" onsubmit="enviarWhatsapp(event)">
    <label for="nombre">Nombre completo</label>
    <input type="text" id="nombre" name="nombre" required />

    <label for="telefono">Teléfono</label>
    <input type="tel" id="telefono" name="telefono" required />

    <label for="servicio">Servicio de Uñas</label>
    <select id="servicio" name="servicio" required>
      <option value="">Seleccioná un servicio</option>
      <option value="Semipermanente">Semipermanente</option>
      <option value="Capping/Rubber">Capping/Rubber</option>
      <option value="Polygel">Polygel</option>
      <option value="Soft Gel">Soft Gel</option>
      <option value="Acrílicas">Acrílicas</option>
      <option value="Service">Service</option>
      <option value="Remoción">Remoción</option>
    </select>

    <label for="mensaje">Mensaje adicional</label>
    <textarea id="mensaje" name="mensaje" rows="4"></textarea>

    <button type="submit" class="whatsapp-btn">
      <img src="/icons/whatsapp.svg" alt="WhatsApp" class="whatsapp-icon" />
      Enviar por WhatsApp
    </button>
  </form>

  <script is:inline>
    function enviarWhatsapp(event) {
      event.preventDefault();

      const nombre = document.getElementById("nombre").value;
      const telefono = document.getElementById("telefono").value;
      const servicio = document.getElementById("servicio").value;
      const mensaje = document.getElementById("mensaje").value;

      const texto = `Hola! Quiero reservar un turno:\n\nNombre: ${nombre}\nTeléfono: ${telefono}\nServicio: ${servicio}\nMensaje: ${mensaje}`;

      const url = `https://wa.me/5491176039317?text=${encodeURIComponent(texto)}`;
      window.open(url, "_blank");
    }
  </script>

  <style>
    .contacto {
      background: linear-gradient(to bottom, #f9f5fc, #fefefe);
      padding: 100px 24px;
      text-align: center;
      font-family: "Poppins", sans-serif;
      animation: fadeInUp 0.8s ease-in-out both;
    }

    .contacto h2 {
      color: #a25ccf;
      font-size: 3rem;
      margin-bottom: 16px;
      animation: fadeIn 1s ease-in-out both;
    }

    .contacto .intro {
      font-size: 1.1rem;
      margin-bottom: 40px;
      color: #555;
      animation: fadeIn 1.2s ease-in-out both;
    }

    .formulario {
      max-width: 500px;
      margin: auto;
      display: flex;
      flex-direction: column;
      gap: 18px;
      background: #fff;
      padding: 32px;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
      animation: fadeInUp 1.3s ease-in-out both;
    }

    .formulario label {
      font-weight: 600;
      color: #333;
      text-align: left;
      transition: color 0.3s;
    }

    .formulario input,
    .formulario select,
    .formulario textarea {
      padding: 12px 16px;
      border-radius: 10px;
      border: 1px solid #ddd;
      font-size: 1rem;
      font-family: inherit;
      transition: all 0.3s ease;
    }

    .formulario input:focus,
    .formulario select:focus,
    .formulario textarea:focus {
      border-color: #a25ccf;
      box-shadow: 0 0 0 3px rgba(162, 92, 207, 0.2);
      outline: none;
    }

    .formulario button {
      background: #25d366;
      color: white;
      border: none;
      padding: 14px;
      border-radius: 30px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition:
        transform 0.3s,
        background 0.3s,
        box-shadow 0.3s;
      box-shadow: 0 4px 10px rgba(37, 211, 102, 0.25);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .formulario button:hover {
      background: #1ebe5b;
      transform: scale(1.05);
      box-shadow: 0 6px 14px rgba(37, 211, 102, 0.3);
    }

    .whatsapp-icon {
      height: 20px;
      width: 20px;
      filter: brightness(0) invert(1);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  </style>
</section>
