---
import Header from "../components/Header.astro";
---

<Header />
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contacto - Mi Estética</title>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
  />
</head>
<section class="contact-section">
  <div class="animated-bg">
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>
    <div class="bg-shape shape-3"></div>
    <div class="floating-orbs">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
      <div class="orb orb-4"></div>
    </div>
  </div>

  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">
        <span class="title-word">Agenda</span>
        <span class="title-word">tu</span>
        <span class="title-word">Cita</span>
      </h1>
      <p class="hero-subtitle">
        Reserva tu momento de belleza y transformación
      </p>
      <div class="hero-divider"></div>
    </div>
  </div>

  <div class="content-grid">
    <div class="booking-card glass-card">
      <div class="card-header">
        <div class="header-icon">
          <div class="icon-wrapper">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
        </div>
        <h2>Reserva Online</h2>
      </div>

      <div class="booking-content">
        <p class="booking-description">
          Agenda tu cita de forma rápida y sencilla con nuestro sistema de
          reservas online
        </p>

        <button class="primary-btn magnetic-btn" id="bookingBtn">
          <span class="btn-bg"></span>
          <span class="btn-text">Reservar con Agenda Pro</span>
          <div class="btn-shine"></div>
        </button>

        <div class="trust-badges">
          <div class="trust-badge">
            <div class="badge-icon">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polygon
                  points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"
                ></polygon>
              </svg>
            </div>
            <span>Sistema seguro</span>
          </div>
          <div class="trust-badge">
            <div class="badge-icon">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polygon points="13,2 3,14 12,14 11,22 21,10 12,10"></polygon>
              </svg>
            </div>
            <span>Confirmación inmediata</span>
          </div>
        </div>
      </div>
    </div>

    <div class="info-card glass-card">
      <div class="card-header">
        <div class="header-icon">
          <div class="icon-wrapper">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="6" x2="12" y2="12"></line>
              <line x1="16" y1="16" x2="12" y2="12"></line>
            </svg>
          </div>
        </div>
        <h2>Información</h2>
      </div>

      <div class="info-content">
        <div class="info-items">
          <div class="info-item" data-delay="0.1">
            <div class="info-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div class="info-text">
              <h3>Ubicaciónes</h3>
              <h4><b>Local-Estetica</b></h4>
              <p>Av. Raúl Scalabrini Ortiz 932 <br />Palermo, CABA</p>
              <br />
              <h4><b>Local-Uñas</b></h4>

              <p>Av. Gral. Las Heras 2480 <br /> Palermo, CABA</p>
            </div>
          </div>

          <div class="info-item" data-delay="0.2">
            <div class="info-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
            </div>
            <div class="info-text">
              <h3>Teléfono</h3>
              <p>+54 11 1234-5678</p>
            </div>
          </div>

          <div class="info-item" data-delay="0.3">
            <div class="info-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12,6 12,12 16,14"></polyline>
              </svg>
            </div>
            <div class="info-text">
              <h3>Horarios</h3>
              <p>Lun a Sáb: 9:00Hs - 20:00Hs</p>
            </div>
          </div>

          <div class="info-item highlight-item" data-delay="0.4">
            <div class="info-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <polygon
                  points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"
                ></polygon>
              </svg>
            </div>
            <div class="info-text">
              <h3>¿Por qué elegirnos?</h3>
              <ul class="features-list">
                <li>Profesionales certificadas</li>
                <li>Productos de calidad premium</li>
                <li>Ambiente relajante</li>
                <li>Atención personalizada</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="quick-actions">
          <a href="tel:+5411123456789" class="action-btn call-btn">
            <div class="btn-icon">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
            </div>
            <span>Llamar</span>
          </a>
          <a
            href="https://wa.me/5411123456789"
            class="action-btn whatsapp-btn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="btn-icon">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                ></path>
              </svg>
            </div>
            <span>WhatsApp</span>
          </a>
        </div>

        <div class="social-section">
          <h3>Síguenos</h3>
          <div class="social-links">
            <a href="#" class="social-link facebook" aria-label="Facebook">
              <i class="fa-brands fa-facebook"></i>
            </a>
            <a href="#" class="social-link instagram" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i>
            </a>
            <a
              href="tiktok.com"
              class="social-link whatsapp"
              aria-label="WhatsApp"
            >
              <i class="fa-brands fa-tiktok"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    :root {
      --primary-purple: #8b5cf6;
      --primary-gold: #f59e0b;
      --secondary-purple: #a855f7;
      --light-purple: #c4b5fd;
      --dark-purple: #6d28d9;
      --white: #ffffff;
      --black: #0f0f23;
      --gray-100: #f8fafc;
      --gray-200: #e2e8f0;
      --gray-300: #cbd5e1;
      --gray-400: #94a3b8;
      --gray-500: #64748b;
      --gray-600: #475569;
      --gray-700: #334155;
      --gray-800: #1e293b;
      --gray-900: #0f172a;

      --gradient-primary: linear-gradient(
        135deg,
        var(--primary-purple),
        var(--primary-gold)
      );
      --gradient-secondary: linear-gradient(
        135deg,
        var(--secondary-purple),
        var(--light-purple)
      );
      --gradient-dark: linear-gradient(
        135deg,
        var(--dark-purple),
        var(--primary-purple)
      );

      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1),
        0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1),
        0 4px 6px -4px rgb(0 0 0 / 0.1);
      --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1),
        0 8px 10px -6px rgb(0 0 0 / 0.1);
      --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
      --shadow-glow: 0 0 30px rgba(139, 92, 246, 0.3);

      --border-radius: 1rem;
      --border-radius-lg: 1.5rem;
      --border-radius-xl: 2rem;

      --transition-fast: 0.15s ease-out;
      --transition-normal: 0.3s ease-out;
      --transition-slow: 0.5s ease-out;

      --z-background: -1;
      --z-content: 1;
      --z-overlay: 10;
      --z-modal: 100;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      background-color: #0f0f23;
      font-family: "Inter", sans-serif;
      color: #ffffff;
    }
    .contact-section {
      position: relative;
      min-height: 100vh;
      padding: 6rem 1.5rem 4rem;
      background: linear-gradient(135deg, #faf5ff 0%, #fff7ed 100%);
      font-family:
        "Inter",
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        sans-serif;
      overflow-x: hidden;
    }

    .animated-bg {
      position: absolute;
      inset: 0;
      z-index: var(--z-background);
      overflow: hidden;
    }
    .bg-shape {
      position: absolute;
      border-radius: 50%;
      background: var(--gradient-primary);
      opacity: 0.1;
      filter: blur(80px);
      animation: morphShape 20s ease-in-out infinite;
    }

    .shape-1 {
      width: 400px;
      height: 400px;
      top: -10%;
      right: -10%;
      animation-delay: 0s;
    }

    .shape-2 {
      width: 300px;
      height: 300px;
      bottom: -5%;
      left: -5%;
      animation-delay: 7s;
    }

    .shape-3 {
      width: 350px;
      height: 350px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation-delay: 14s;
    }

    .floating-orbs {
      position: absolute;
      inset: 0;
      pointer-events: none;
    }

    .orb {
      position: absolute;
      border-radius: 50%;
      background: var(--gradient-secondary);
      opacity: 0.2;
      animation: floatOrb 15s ease-in-out infinite;
    }

    .orb-1 {
      width: 60px;
      height: 60px;
      top: 20%;
      left: 10%;
      animation-delay: 0s;
    }

    .orb-2 {
      width: 80px;
      height: 80px;
      top: 60%;
      right: 15%;
      animation-delay: 5s;
    }

    .orb-3 {
      width: 40px;
      height: 40px;
      bottom: 30%;
      left: 20%;
      animation-delay: 10s;
    }

    .orb-4 {
      width: 70px;
      height: 70px;
      top: 40%;
      right: 30%;
      animation-delay: 12s;
    }
    @keyframes fadeInSlideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes morphShape {
      0%,
      100% {
        transform: translate(0, 0) rotate(0deg) scale(1);
      }
      25% {
        transform: translate(20px, -20px) rotate(90deg) scale(1.1);
      }
      50% {
        transform: translate(-15px, 15px) rotate(180deg) scale(0.9);
      }
      75% {
        transform: translate(-20px, -15px) rotate(270deg) scale(1.05);
      }
    }

    @keyframes floatOrb {
      0%,
      100% {
        transform: translateY(0px) translateX(0px) scale(1);
      }
      33% {
        transform: translateY(-30px) translateX(20px) scale(1.1);
      }
      66% {
        transform: translateY(10px) translateX(-15px) scale(0.9);
      }
    }

    .hero-section {
      text-align: center;
      margin-bottom: 4rem;
      position: relative;
      z-index: var(--z-content);
    }

    .hero-content {
      animation: fadeInUp 1s ease-out;
    }

    .hero-title {
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      color: var(--gray-900);
    }

    .title-word {
      display: inline-block;
      animation: slideInDown 0.8s ease-out forwards;
      opacity: 0;
    }

    .title-word:nth-child(1) {
      animation-delay: 0.2s;
    }
    .title-word:nth-child(2) {
      animation-delay: 0.4s;
    }
    .title-word:nth-child(3) {
      animation-delay: 0.6s;
    }

    .highlight {
      background: var(--gradient-primary);
      background-size: 200% 200%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: gradientShift 3s ease-in-out infinite;
    }

    .hero-subtitle {
      font-size: clamp(1.125rem, 2vw, 1.25rem);
      color: var(--gray-600);
      margin-bottom: 2rem;
      animation: fadeIn 1s ease-out 0.8s both;
    }

    .hero-divider {
      width: 100px;
      height: 4px;
      background: var(--gradient-primary);
      margin: 0 auto;
      border-radius: 2px;
      animation: scaleX 0.8s ease-out 1s both;
      transform-origin: center;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes scaleX {
      from {
        transform: scaleX(0);
      }
      to {
        transform: scaleX(1);
      }
    }

    @keyframes gradientShift {
      0%,
      100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }

    .content-grid {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 500px), 1fr));
      gap: 2rem;
      position: relative;
      z-index: var(--z-content);
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: var(--border-radius-xl);
      padding: 2.5rem;
      box-shadow: var(--shadow-xl);
      position: relative;
      overflow: hidden;
      transition: all var(--transition-slow);
      animation: slideInUp 0.8s ease-out;
    }

    .glass-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.4),
        transparent
      );
      transition: left 1.5s ease-in-out;
    }

    .glass-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: var(--shadow-2xl), var(--shadow-glow);
      border-color: rgba(139, 92, 246, 0.3);
    }

    .glass-card:hover::before {
      left: 100%;
    }

    .booking-card {
      animation-delay: 0.2s;
    }

    .info-card {
      animation-delay: 0.4s;
    }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .header-icon {
      margin-bottom: 1rem;
    }

    .icon-wrapper {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 4rem;
      height: 4rem;
      background: var(--gradient-primary);
      border-radius: 50%;
      color: var(--white);
      animation: iconPulse 2s ease-in-out infinite;
      box-shadow: var(--shadow-lg);
    }

    .card-header h2 {
      font-size: 1.875rem;
      font-weight: 700;
      color: var(--gray-900);
      margin: 0;
    }

    @keyframes iconPulse {
      0%,
      100% {
        transform: scale(1);
        box-shadow: var(--shadow-lg);
      }
      50% {
        transform: scale(1.05);
        box-shadow: var(--shadow-xl), var(--shadow-glow);
      }
    }

    .booking-content {
      text-align: center;
    }

    .booking-description {
      color: var(--gray-600);
      font-size: 1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
    }

    .primary-btn {
      position: relative;
      width: 100%;
      max-width: 320px;
      padding: 1rem 2rem;
      background: var(--gradient-primary);
      color: var(--white);
      border: none;
      border-radius: 50px;
      font-size: 1.125rem;
      font-weight: 600;
      cursor: pointer;
      overflow: hidden;
      transition: all var(--transition-normal);
      margin-bottom: 1.5rem;
    }

    .btn-bg {
      position: absolute;
      inset: 0;
      background: var(--gradient-dark);
      opacity: 0;
      transition: opacity var(--transition-normal);
    }

    .btn-text {
      position: relative;
      z-index: 2;
      transition: transform var(--transition-normal);
    }

    .btn-shine {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      transition: left 0.8s ease-out;
    }

    .primary-btn:hover .btn-bg {
      opacity: 1;
    }

    .primary-btn:hover .btn-text {
      transform: scale(1.05);
    }

    .primary-btn:hover .btn-shine {
      left: 100%;
    }

    .primary-btn:focus {
      outline: 2px solid var(--primary-purple);
      outline-offset: 2px;
    }

    .magnetic-btn {
      transition: transform var(--transition-fast);
    }

    .trust-badges {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .trust-badge {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--gray-600);
      font-size: 0.875rem;
      animation: slideInUp 0.6s ease-out;
    }

    .trust-badge:nth-child(1) {
      animation-delay: 1.2s;
    }
    .trust-badge:nth-child(2) {
      animation-delay: 1.4s;
    }

    .badge-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 1.5rem;
      height: 1.5rem;
      background: var(--gradient-secondary);
      color: var(--white);
      border-radius: 50%;
      animation: spin 3s linear infinite;
    }

    @keyframes spin {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    .info-content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .info-items {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .info-item {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.25rem;
      background: rgba(255, 255, 255, 0.5);
      border-radius: var(--border-radius);
      border: 1px solid rgba(255, 255, 255, 0.3);
      transition: all var(--transition-normal);
