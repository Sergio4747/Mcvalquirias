    alt: "Peinado de Novia",
  },
  {
    src: "https://placehold.co/600x400/d97706/ffffff?text=Imagen+05",
    alt: "Sesión de Spa",
  },
  {
    src: "https://placehold.co/600x400/a855f7/ffffff?text=Imagen+06",
    alt: "Maquillaje Artístico",
  },
  {
    src: "https://placehold.co/600x400/f59e0b/ffffff?text=Imagen+07",
    alt: "Cuidado de la Piel",
  },
  {
    src: "https://placehold.co/600x400/c4b5fd/1f2937?text=Imagen+08",
    alt: "Diseño de Cejas",
  },
];
---

<section class="gallery-section">
  <div class="gallery-header">
    <h2 class="gallery-title">Nuestra Galería</h2>
    <p class="gallery-subtitle">
      Explora la belleza que creamos en Valquirias Estética.
    </p>
  </div>

  <div class="gallery-grid">
    {
      galleryImages.map((image, index) => (
        <div class="gallery-item" style={`animation-delay: ${index * 0.1}s;`}>
          <img src={image.src} alt={image.alt} loading="lazy" />
          <div class="gallery-overlay">
            <span class="overlay-text">{image.alt}</span>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  :root {
    --lila: #a855f7;
    --lila-dark: #7c3aed;
    --lila-light: #c4b5fd;
    --dorado: #f59e0b;
    --dorado-dark: #d97706;
    --dorado-light: #fbbf24;
    --negro: #1f2937;
    --blanco: #ffffff;
    --gris: #6b7280;
    --fondo-oscuro: #121212;
    --gradiente-principal: linear-gradient(
      135deg,
      var(--lila) 0%,
      var(--dorado) 100%
    );
    --transicion-suave: all 0.3s ease-in-out;
  }

  .gallery-section {
    padding: 80px 20px;
    background-color: var(--fondo-oscuro);
    color: var(--blanco);
    text-align: center;
    overflow: hidden;
  }

  .gallery-header {
    margin-bottom: 60px;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s ease-out forwards;
  }

  .gallery-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 15px;
    background: var(--gradiente-principal);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 15px rgba(245, 158, 11, 0.3);
  }

  .gallery-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    color: var(--gris);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: var(--transicion-suave);
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation: itemEntrance 0.8s ease-out forwards;
  }

  .gallery-item img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
    transition: var(--transicion-suave);
  }

  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      rgba(var(--negro), 0.8) 0%,
      transparent 50%
    );
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: 20px;
    opacity: 0;
    transition: var(--transicion-suave);
  }

  .overlay-text {
    color: var(--blanco);
    font-size: 1.1rem;
    font-weight: 600;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.7);
    transform: translateY(20px);
    transition: var(--transicion-suave);
  }

  .gallery-item:hover {
    transform: translateY(-5px) scale(1.03);
    box-shadow: 0 15px 40px rgba(var(--lila), 0.4);
    outline: 3px solid var(--dorado-light);
    outline-offset: -3px;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-item:hover .overlay-text {
    transform: translateY(0);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes itemEntrance {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 25px;
    }
    .gallery-item img {
      height: 220px;
    }
  }

  @media (max-width: 768px) {
    .gallery-section {
      padding: 60px 15px;
    }
    .gallery-header {
      margin-bottom: 40px;
    }
    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }
    .gallery-item img {
      height: 180px;
    }
    .overlay-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .gallery-section {
      padding: 40px 10px;
    }
    .gallery-title {
      font-size: 2rem;
    }
    .gallery-subtitle {
      font-size: 0.9rem;
    }
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }
    .gallery-item img {
      height: 200px;
    }
  }
</style>
