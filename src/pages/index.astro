    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Se especifica que 'button' es un elemento de botón o nulo.
        const button = document.getElementById(
          "cta-button"
        ) as HTMLButtonElement | null;

        if (button) {
          // Usamos una función de flecha para evitar problemas con 'this'.
          button.addEventListener("click", (e) => {
            const ripple = document.createElement("span");
            // Usamos 'button' en lugar de 'this'.
            const rect = button.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = e.clientX - rect.left - size / 2;
            const y = e.clientY - rect.top - size / 2;

            ripple.style.cssText = `
          position: absolute;
          width: ${size}px;
          height: ${size}px;
          left: ${x}px;
          top: ${y}px;
          border-radius: 50%;
          background: rgba(255, 255, 255, 0.7);
          pointer-events: none;
          animation: buttonRipple 0.8s ease-out;
          z-index: 1;
        `;

            // Usamos 'button' en lugar de 'this'.
            button.appendChild(ripple);

            setTimeout(() => {
              if (ripple.parentNode) {
                ripple.remove();
              }
            }, 800);

            console.log("¡Reserva iniciada en McValquirias!");
          });
        }

        const scrollIndicator = document.querySelector(".scroll-indicator");
        if (scrollIndicator) {
          scrollIndicator.addEventListener("click", () => {
            const aboutSection = document.querySelector(".about-section");
            // FIX: Se agrega una comprobación para asegurar que 'aboutSection' no sea nulo.
            if (aboutSection) {
              aboutSection.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          });
        }

        if (window.innerWidth > 768) {
          let ticking = false;

          function updateParallax() {
            const scrolled = window.pageYOffset;
            // Se especifica que 'container' es un elemento HTML.
            const container = document.querySelector(
              ".hero-container"
            ) as HTMLElement | null;
            const particles = document.querySelectorAll(".particle");

            if (container && scrolled < window.innerHeight) {
              container.style.transform = `translateY(${scrolled * 0.2}px)`;

              particles.forEach((particle, index) => {
                const speed = (index + 1) * 0.05 + 0.02;
                const rotation = scrolled * (index % 2 === 0 ? 0.1 : -0.1);
                // FIX: Se convierte 'particle' a HTMLElement para acceder a 'style'.
                (particle as HTMLElement).style.transform =
                  `translateY(${scrolled * speed}px) rotate(${rotation}deg)`;
              });
            }
            ticking = false;
          }

          function requestTick() {
            if (!ticking) {
              requestAnimationFrame(updateParallax);
              ticking = true;
            }
          }
          window.addEventListener("scroll", requestTick, { passive: true });
        }

        const observerOptions = {
          threshold: 0.1,
          rootMargin: "0px 0px -50px 0px",
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              // FIX: Se convierte 'entry.target' a HTMLElement para acceder a 'style'.
              const target = entry.target as HTMLElement;
              target.style.animationDelay = `${index * 0.1}s`;
              target.classList.add("animate-in-view");
            }
          });
        }, observerOptions);

        const animatedElements = document.querySelectorAll(
          ".story-card, .philosophy-card, .team-card, .value-card"
        );
        animatedElements.forEach((el) => observer.observe(el));

        const teamCards = document.querySelectorAll(".team-card");
        teamCards.forEach((card) => {
          // Usamos funciones de flecha para mantener el contexto correcto.
          card.addEventListener("mouseenter", () => {
            (card as HTMLElement).style.transform =
              "translateY(-8px) scale(1.02)";
          });
          card.addEventListener("mouseleave", () => {
            (card as HTMLElement).style.transform = "translateY(0) scale(1)";
          });
        });

        const statItems = document.querySelectorAll(".stat-item");
        statItems.forEach((item) => {
          // Usamos funciones de flecha.
          item.addEventListener("mouseenter", () => {
            const number = item.querySelector(
              ".stat-number"
            ) as HTMLElement | null;
            if (number) {
              number.style.transform = "scale(1.1)";
              number.style.textShadow = "0 0 20px rgba(139, 92, 246, 0.6)";
            }
          });
          item.addEventListener("mouseleave", () => {
            const number = item.querySelector(
              ".stat-number"
            ) as HTMLElement | null;
            if (number) {
              number.style.transform = "scale(1)";
              number.style.textShadow = "none";
            }
          });
        });
      });

      const style = document.createElement("style");
      style.textContent = `
    .animate-in-view {
      animation: slideUpStagger 0.8s ease-out forwards !important;
    }
  `;
