---
import BaseLayout from "../layouts/BaseLayout.astro";
import Servicios from "../pages/servicios.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Inicio"
  description="Bienvenido a nuestro sitio web oficial. Descubre nuestros servicios y productos de alta calidad."
  image="/images/pagina-inicio.jpg"
>
  <h1>¡Bienvenido!</h1>
  <p>...</p>
</BaseLayout>
<head>
  <title>Valquirias Estética</title>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap"
    rel="stylesheet"
  />
</head>
<section class="hero">
  <video autoplay muted loop playsinline class="background-video">
    <source src="/video/herovid.mp4" type="video/mp4" />
    Tu navegador no soporta video HTML5.
  </video>
  <div class="particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>

  <div class="hero-overlay">
    <div class="hero-content">
      <div class="logo-container">
        <h1 class="main-title">
          <span class="title-word">Valquirias</span>
          <span class="title-word">Estética</span>
        </h1>
        <div class="title-underline"></div>
      </div>

      <p class="hero-subtitle">Realzá tu belleza con manos profesionales</p>

      <div class="buttons-container">
        <button class="cta-button primary">
          <span class="button-text">Ver Servicios</span>
          <div class="button-bg"></div>
          <div class="button-shine"></div>
        </button>
        <button class="cta-button secondary">
          <span class="button-text">Contactar</span>
          <div class="button-bg"></div>
        </button>
      </div>
      <div class="decorative-elements">
        <div class="floating-gem gem-1"></div>
        <div class="floating-gem gem-2"></div>
        <div class="floating-gem gem-3"></div>
      </div>
    </div>
  </div>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html,
    body {
      width: 100%;
      height: 100%;
      overflow-x: hidden;
      font-family: "Poppins", sans-serif;
      background-color: #000;
    }

    .hero {
      position: relative;
      width: 100vw;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .background-video {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;
      filter: brightness(0.6) contrast(1.1) saturate(1.2);
      pointer-events: none;
    }

    .particles {
      position: absolute;
      inset: 0;
      z-index: 2;
      pointer-events: none;
    }

    .particle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: linear-gradient(45deg, #e96ee3, #d4af37);
      border-radius: 50%;
      opacity: 0.6;
      animation: float 6s infinite ease-in-out;
    }

    .particle:nth-child(1) {
      top: 20%;
      left: 10%;
      animation-delay: 0s;
      animation-duration: 8s;
    }

    .particle:nth-child(2) {
      top: 60%;
      left: 80%;
      animation-delay: 1s;
      animation-duration: 6s;
    }

    .particle:nth-child(3) {
      top: 30%;
      left: 70%;
      animation-delay: 2s;
      animation-duration: 7s;
    }

    .particle:nth-child(4) {
      top: 80%;
      left: 20%;
      animation-delay: 3s;
      animation-duration: 9s;
    }

    .particle:nth-child(5) {
      top: 10%;
      left: 50%;
      animation-delay: 4s;
      animation-duration: 5s;
    }

    .particle:nth-child(6) {
      top: 70%;
      left: 60%;
      animation-delay: 5s;
      animation-duration: 8s;
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(0) scale(1);
        opacity: 0.6;
      }
      50% {
        transform: translateY(-20px) scale(1.2);
        opacity: 1;
      }
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      z-index: 3;
      background: linear-gradient(
        135deg,
        rgba(162, 92, 207, 0.3) 0%,
        rgba(233, 110, 227, 0.2) 30%,
        rgba(0, 0, 0, 0.4) 70%,
        rgba(0, 0, 0, 0.7) 100%
      );
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .hero-content {
      position: relative;
      z-index: 4;
      max-width: 800px;
      text-align: center;
      color: #ffffff;
      animation: heroEntrance 1.5s ease-out;
    }

    .logo-container {
      margin-bottom: 2rem;
      position: relative;
    }

    .main-title {
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 700;
      line-height: 0.9;
      margin-bottom: 1rem;
      position: relative;
    }

    .title-word {
      display: inline-block;
      background: linear-gradient(
        135deg,
        #e96ee3 0%,
        #d4af37 50%,
        #ffffff 100%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: titleGlow 3s ease-in-out infinite alternate;
      text-shadow: 0 0 30px rgba(233, 110, 227, 0.5);
    }

    .title-word:nth-child(2) {
      animation-delay: 0.5s;
    }

    .title-underline {
      width: 120px;
      height: 4px;
      background: linear-gradient(
        90deg,
        transparent,
        #e96ee3,
        #d4af37,
        transparent
      );
      margin: 1rem auto;
      border-radius: 2px;
      animation: underlineExpand 2s ease-out 0.5s both;
    }

    @keyframes titleGlow {
      0% {
        filter: brightness(1) drop-shadow(0 0 10px rgba(233, 110, 227, 0.3));
      }
      100% {
        filter: brightness(1.2) drop-shadow(0 0 20px rgba(233, 110, 227, 0.6));
      }
    }

    @keyframes underlineExpand {
      0% {
        width: 0;
        opacity: 0;
      }
      100% {
        width: 120px;
        opacity: 1;
      }
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 3vw, 1.8rem);
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 3rem;
      line-height: 1.6;
      font-weight: 300;
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      animation: fadeInUp 1s ease-out 0.8s both;
    }

    .buttons-container {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 2rem;
      animation: fadeInUp 1s ease-out 1.2s both;
    }

    .cta-button {
      position: relative;
      padding: 16px 32px;
      font-size: 1.1rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      overflow: hidden;
      transition: all 0.3s ease;
      min-width: 160px;
    }

    .cta-button.primary {
      background: linear-gradient(135deg, #e96ee3, #d4af37);
      color: white;
      box-shadow: 0 8px 25px rgba(233, 110, 227, 0.4);
    }

    .cta-button.secondary {
      background: transparent;
      color: #d4af37;
      border: 2px solid #d4af37;
      box-shadow: 0 8px 25px rgba(212, 175, 55, 0.2);
    }

    .button-text {
      position: relative;
      z-index: 2;
    }

    .button-bg {
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, #d4af37, #e96ee3);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .button-shine {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      transition: left 0.6s ease;
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(233, 110, 227, 0.6);
    }

    .cta-button.primary:hover .button-shine {
      left: 100%;
    }

    .cta-button.secondary:hover {
      color: white;
      box-shadow: 0 12px 35px rgba(212, 175, 55, 0.4);
    }

    .cta-button.secondary:hover .button-bg {
      opacity: 1;
    }

    .decorative-elements {
      position: absolute;
      inset: 0;
      pointer-events: none;
    }

    .floating-gem {
      position: absolute;
      width: 8px;
      height: 8px;
      background: linear-gradient(45deg, #e96ee3, #d4af37);
      border-radius: 50%;
      animation: gemFloat 4s infinite ease-in-out;
    }

    .gem-1 {
      top: -20px;
      left: 20%;
      animation-delay: 0s;
    }

    .gem-2 {
      top: 50%;
      right: -30px;
      animation-delay: 1s;
    }

    .gem-3 {
      bottom: -20px;
      left: 70%;
      animation-delay: 2s;
    }

    @keyframes gemFloat {
      0%,
      100% {
        transform: translateY(0) rotate(0deg);
        opacity: 0.6;
      }
      50% {
        transform: translateY(-15px) rotate(180deg);
        opacity: 1;
      }
    }

    .scroll-arrow {
      width: 2px;
      height: 30px;
      background: linear-gradient(to bottom, transparent, #e96ee3);
      margin: 0 auto 10px;
      position: relative;
      animation: scrollBounce 2s infinite;
    }

    .scroll-arrow::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 0;
      border-left: 4px solid transparent;
      border-right: 4px solid transparent;
      border-top: 8px solid #e96ee3;
    }

    @keyframes scrollBounce {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(10px);
      }
    }

    @keyframes heroEntrance {
      0% {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 1024px) {
      .buttons-container {
        gap: 1rem;
      }

      .cta-button {
        padding: 14px 28px;
        font-size: 1rem;
        min-width: 140px;
      }
    }

    @media (max-width: 768px) {
      .hero-overlay {
        padding: 1.5rem;
      }

      .hero-subtitle {
        margin-bottom: 2.5rem;
      }

      .buttons-container {
        flex-direction: column;
        align-items: center;
        gap: 1rem;
      }

      .cta-button {
        width: 100%;
        max-width: 280px;
        padding: 16px 24px;
      }

      .title-underline {
        width: 80px;
      }
    }

    @media (max-width: 480px) {
      .hero {
        padding: 1rem;
      }

      .hero-overlay {
        padding: 1rem;
      }

      .main-title {
        font-size: clamp(2rem, 10vw, 3rem);
      }

      .hero-subtitle {
        font-size: clamp(1rem, 4vw, 1.3rem);
        margin-bottom: 2rem;
      }

      .cta-button {
        padding: 14px 20px;
        font-size: 0.95rem;
      }

      .scroll-indicator {
        bottom: 20px;
        font-size: 0.8rem;
      }
    }

    @media (hover: none) {
      .cta-button:active {
        transform: scale(0.98);
      }
    }
  </style>

  <script>
    document
      .querySelector(".cta-button.primary")
      ?.addEventListener("click", () => {
        window.location.href = "/servicios";
      });

    document
      .querySelector(".cta-button.secondary")
      ?.addEventListener("click", () => {
        window.location.href = "/contacto";
      });

    window.addEventListener("scroll", () => {
      const scrolled = window.pageYOffset;
      const video = document.querySelector(".background-video");
      const overlay = document.querySelector(".hero-overlay");

      if (video instanceof HTMLElement && overlay instanceof HTMLElement) {
        video.style.transform = `translateY(${scrolled * 0.5}px)`;
        overlay.style.transform = `translateY(${scrolled * 0.3}px)`;
      }
    });

    document.addEventListener("DOMContentLoaded", () => {
      const heroContent = document.querySelector(".hero-content");

      if (heroContent instanceof HTMLElement) {
        setTimeout(() => {
          heroContent.style.animation = "heroEntrance 1.5s ease-out";
        }, 100);
      }
    });

    const titleWords = document.querySelectorAll(".title-word");

    titleWords.forEach((word) => {
      if (word instanceof HTMLElement) {
        word.addEventListener("mouseenter", () => {
          word.style.animation = "titleGlow 0.5s ease-out";
        });
      }
    });
  </script>
</section>
