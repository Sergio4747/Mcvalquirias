---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const title = "McValquirias";
const subtitle = "Belleza que Inspira";
const description =
  "En McValquirias, cada tratamiento es una experiencia única. Descubre tu belleza más radiante en un ambiente de lujo y sofisticación que transformará tu bienestar.";
const ctaText = "Reserva tu Cita";

const heroConfig = {
  backgroundImage: "estetica-hero.jpg",
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Estética Premium</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&family=Dancing+Script:wght@400;500;600;700&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Cormorant Garamond", serif;
        overflow-x: hidden;
        min-height: 100vh;
      }
      a {
        text-decoration: none;
        color: white;
      }

      .font-elegant {
        font-family: "Playfair Display", serif;
      }

      .font-script {
        font-family: "Dancing Script", cursive;
      }

      :root {
        --lila-light: #f3e8ff;
        --lila-medium: #e9d5ff;
        --lila-dark: #c4b5fd;
        --lila-deep: #a78bfa;
        --lila-intense: #8b5cf6;
        --lila-darkest: #7c3aed;

        --dorado-light: #fef3c7;
        --dorado-medium: #fde68a;
        --dorado-dark: #fbbf24;
        --dorado-deep: #f59e0b;
        --dorado-intense: #d97706;
        --dorado-darkest: #b45309;
      }

      @keyframes fadeInUp {
        0% {
          opacity: 0;
          transform: translateY(60px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideInDown {
        0% {
          opacity: 0;
          transform: translateY(-50px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideInLeft {
        0% {
          opacity: 0;
          transform: translateX(-60px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes slideInRight {
        0% {
          opacity: 0;
          transform: translateX(60px);
        }
        100% {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes zoomIn {
        0% {
          opacity: 0;
          transform: scale(0.7);
        }
        100% {
          opacity: 1;
          transform: scale(1);
        }
      }

      @keyframes zoomInRotate {
        0% {
          opacity: 0;
          transform: scale(0.5) rotate(-10deg);
        }
        100% {
          opacity: 1;
          transform: scale(1) rotate(0deg);
        }
      }

      @keyframes float {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-15px);
        }
      }

      @keyframes floatSlow {
        0%,
        100% {
          transform: translateY(0px) rotate(0deg);
        }
        50% {
          transform: translateY(-20px) rotate(5deg);
        }
      }

      @keyframes sparkle {
        0%,
        100% {
          opacity: 0.4;
          transform: scale(0.8);
        }
        50% {
          opacity: 1;
          transform: scale(1.3);
        }
      }

      @keyframes shimmer {
        0% {
          background-position: -200% center;
        }
        100% {
          background-position: 200% center;
        }
      }

      @keyframes pulse-glow {
        0%,
        100% {
          box-shadow:
            0 0 25px rgba(139, 92, 246, 0.4),
            0 0 50px rgba(245, 158, 11, 0.3);
        }
        50% {
          box-shadow:
            0 0 35px rgba(139, 92, 246, 0.6),
            0 0 70px rgba(245, 158, 11, 0.5);
        }
      }

      @keyframes text-glow {
        0%,
        100% {
          text-shadow: 0 0 20px rgba(245, 158, 11, 0.6);
        }
        50% {
          text-shadow:
            0 0 30px rgba(245, 158, 11, 0.9),
            0 0 40px rgba(139, 92, 246, 0.3);
        }
      }

      @keyframes particleFloat1 {
        0%,
        100% {
          transform: translate(0, 0) rotate(0deg);
        }
        25% {
          transform: translate(40px, -30px) rotate(90deg);
        }
        50% {
          transform: translate(-25px, -45px) rotate(180deg);
        }
        75% {
          transform: translate(-40px, -25px) rotate(270deg);
        }
      }

      @keyframes particleFloat2 {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(-50px, 35px) scale(1.4);
        }
        66% {
          transform: translate(40px, -50px) scale(0.6);
        }
      }

      @keyframes particleFloat3 {
        0%,
        100% {
          transform: translate(0, 0) rotate(0deg) scale(1);
        }
        50% {
          transform: translate(30px, -30px) rotate(180deg) scale(1.2);
        }
      }

      @keyframes wave {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-12px);
        }
      }

      @keyframes buttonRipple {
        0% {
          transform: scale(0);
          opacity: 1;
        }
        100% {
          transform: scale(4);
          opacity: 0;
        }
      }

      @keyframes heartbeat {
        0%,
        100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.1);
        }
      }

      @keyframes twinkle {
        0%,
        100% {
          opacity: 0.3;
        }
        50% {
          opacity: 1;
        }
      }

      @keyframes slideUpStagger {
        0% {
          opacity: 0;
          transform: translateY(40px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .hero-container {
        min-height: 100vh;
        background-image: url("img/estetica-hero.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        overflow: hidden;
      }

      .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          135deg,
          rgba(139, 92, 246, 0.85) 0%,
          rgba(167, 139, 250, 0.75) 25%,
          rgba(196, 181, 253, 0.65) 50%,
          rgba(136, 110, 67, 0.75) 75%,
          rgba(217, 119, 6, 0.85) 100%
        );
        z-index: 1;
      }

      .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
        color: white;
        max-width: 1200px;
        width: 100%;
      }

      .particle {
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
        z-index: 5;
        opacity: 0.7;
      }

      .particle-1 {
        width: 10px;
        height: 10px;
        background: radial-gradient(
          circle,
          rgba(255, 215, 0, 0.9),
          transparent
        );
        top: 15%;
        left: 8%;
        animation: particleFloat1 18s ease-in-out infinite;
      }

      .particle-2 {
        width: 14px;
        height: 14px;
        background: radial-gradient(
          circle,
          rgba(139, 92, 246, 0.8),
          transparent
        );
        top: 65%;
        right: 12%;
        animation: particleFloat2 15s ease-in-out infinite;
      }

      .particle-3 {
        width: 8px;
        height: 8px;
        background: radial-gradient(
          circle,
          rgba(245, 158, 11, 0.9),
          transparent
        );
        top: 30%;
        right: 30%;
        animation: particleFloat3 12s ease-in-out infinite;
      }

      .particle-4 {
        width: 12px;
        height: 12px;
        background: radial-gradient(
          circle,
          rgba(196, 181, 253, 0.8),
          transparent
        );
        bottom: 35%;
        left: 15%;
        animation: wave 11s ease-in-out infinite;
      }

      .particle-5 {
        width: 6px;
        height: 6px;
        background: radial-gradient(
          circle,
          rgba(251, 191, 36, 0.9),
          transparent
        );
        top: 45%;
        left: 35%;
        animation: twinkle 8s ease-in-out infinite;
      }

      .particle-6 {
        width: 16px;
        height: 16px;
        background: radial-gradient(
          circle,
          rgba(167, 139, 250, 0.7),
          transparent
        );
        bottom: 55%;
        right: 40%;
        animation: floatSlow 14s ease-in-out infinite;
      }

      .decorative-line {
        height: 3px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.8),
          transparent
        );
        border-radius: 2px;
        animation: shimmer 4s ease-in-out infinite;
      }

      .decorative-dot {
        width: 12px;
        height: 12px;
        background: linear-gradient(
          135deg,
          var(--dorado-dark),
          var(--dorado-deep)
        );
        border-radius: 50%;
        box-shadow: 0 0 20px rgba(251, 191, 36, 0.7);
        animation: sparkle 4s ease-in-out infinite;
      }

      .hero-subtitle {
        font-size: 2.5rem;
        background: linear-gradient(
          135deg,
          var(--dorado-dark) 0%,
          var(--dorado-intense) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: text-glow 5s ease-in-out infinite;
        margin-bottom: 2rem;
        letter-spacing: 1px;
      }

      .hero-title {
        font-size: 5rem;
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 3rem;
        text-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        letter-spacing: -1px;
        animation: heartbeat 6s ease-in-out infinite;
      }

      .hero-description {
        font-size: 1.4rem;
        line-height: 1.7;
        margin-bottom: 3rem;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        text-shadow: 0 3px 6px rgba(0, 0, 0, 0.3);
        font-weight: 400;
      }

      .hero-button {
        background: linear-gradient(
          135deg,
          var(--dorado-dark) 0%,
          var(--dorado-deep) 50%,
          var(--dorado-intense) 100%
        );
        color: var(--lila-darkest);
        font-family: "Playfair Display", serif;
        font-weight: 700;
        font-size: 1.3rem;
        padding: 1.5rem 3.5rem;
        border: none;
        border-radius: 60px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 15px 30px rgba(245, 158, 11, 0.4);
        animation: pulse-glow 4s ease-in-out infinite;
        letter-spacing: 0.5px;
      }

      .hero-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.4),
          transparent
        );
        transition: left 0.8s;
      }

      .hero-button::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.6s ease;
      }

      .hero-button:hover::before {
        left: 100%;
      }

      .hero-button:hover::after {
        width: 300px;
        height: 300px;
      }

      .hero-button:hover {
        transform: translateY(-6px) scale(1.05);
        box-shadow: 0 20px 40px rgba(245, 158, 11, 0.6);
      }

      .hero-button:active {
        transform: translateY(-2px) scale(1.02);
      }

      .animate-slide-down {
        opacity: 0;
        animation: slideInDown 1.2s cubic-bezier(0.165, 0.84, 0.44, 1) 0.2s
          forwards;
      }

      .animate-zoom-in {
        opacity: 0;
        animation: zoomInRotate 1.2s cubic-bezier(0.165, 0.84, 0.44, 1) 0.4s
          forwards;
      }

      .animate-fade-up {
        opacity: 0;
        animation: fadeInUp 1.2s cubic-bezier(0.165, 0.84, 0.44, 1) 0.6s
          forwards;
      }

      .animate-fade-up-delay {
        opacity: 0;
        animation: fadeInUp 1.2s cubic-bezier(0.165, 0.84, 0.44, 1) 0.8s
          forwards;
      }

      .animate-zoom-in-delay {
        opacity: 0;
        animation: zoomIn 1.2s cubic-bezier(0.165, 0.84, 0.44, 1) 1s forwards;
      }

      .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        text-align: center;
        opacity: 0;
        animation: fadeInUp 1.2s ease-out 1.4s forwards;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .scroll-indicator:hover {
        transform: translateX(-50%) translateY(-5px);
      }

      .scroll-mouse {
        width: 28px;
        height: 45px;
        border: 2px solid rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        display: flex;
        justify-content: center;
        margin: 0 auto 0.5rem;
        transition: all 0.3s ease;
      }

      .scroll-indicator:hover .scroll-mouse {
        border-color: var(--dorado-dark);
        box-shadow: 0 0 15px rgba(251, 191, 36, 0.5);
      }

      .scroll-dot {
        width: 4px;
        height: 14px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 2px;
        margin-top: 10px;
        animation: float 2.5s ease-in-out infinite;
      }

      .about-section {
        background: linear-gradient(
          135deg,
          var(--lila-light) 0%,
          #ffffff 25%,
          var(--dorado-light) 50%,
          #ffffff 75%,
          var(--lila-light) 100%
        );
        padding: 8rem 1rem;
        position: relative;
        overflow: hidden;
      }

      .about-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            circle at 15% 25%,
            rgba(139, 92, 246, 0.08) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 85% 75%,
            rgba(245, 158, 11, 0.08) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 50% 50%,
            rgba(167, 139, 250, 0.05) 0%,
            transparent 70%
          );
        pointer-events: none;
      }

      .about-container {
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
      }

      .about-header {
        text-align: center;
        margin-bottom: 6rem;
      }

      .decorative-elements {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2.5rem;
        opacity: 0;
        animation: slideInDown 1.2s ease-out 0.2s forwards;
      }

      .decorative-line-about {
        width: 6rem;
        height: 4px;
        background: linear-gradient(
          90deg,
          transparent,
          var(--lila-deep),
          var(--dorado-dark),
          var(--lila-deep),
          transparent
        );
        border-radius: 2px;
        animation: shimmer 4s ease-in-out infinite;
      }

      .decorative-dot-about {
        width: 14px;
        height: 14px;
        background: linear-gradient(
          135deg,
          var(--lila-deep),
          var(--lila-intense)
        );
        border-radius: 50%;
        box-shadow: 0 0 20px rgba(139, 92, 246, 0.6);
        animation: sparkle 4s ease-in-out infinite;
      }

      .about-subtitle {
        font-size: 2.5rem;
        background: linear-gradient(
          135deg,
          var(--lila-deep) 0%,
          var(--lila-intense) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: zoomIn 1.2s ease-out 0.4s forwards;
      }

      .about-title {
        font-size: 4rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 0;
        opacity: 0;
        animation: fadeInUp 1.2s ease-out 0.6s forwards;
        letter-spacing: -1px;
      }

      .about-story {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
        gap: 3rem;
        margin-bottom: 6rem;
      }

      .story-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(15px);
        border-radius: 2rem;
        padding: 3rem;
        text-align: left;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        border: 2px solid rgba(139, 92, 246, 0.15);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        opacity: 0;
        animation: slideUpStagger 1s ease-out forwards;
      }

      .story-card:nth-child(1) {
        animation-delay: 0.8s;
      }
      .story-card:nth-child(2) {
        animation-delay: 1s;
      }
      .story-card:nth-child(3) {
        animation-delay: 1.2s;
      }
      .story-card:nth-child(4) {
        animation-delay: 1.4s;
      }
      .story-card:nth-child(5) {
        animation-delay: 1.6s;
      }
      .story-card:nth-child(6) {
        animation-delay: 1.8s;
      }

      .story-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: linear-gradient(
          90deg,
          var(--lila-deep),
          var(--dorado-dark)
        );
        border-radius: 2rem 2rem 0 0;
      }

      .story-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      }

      .story-icon {
        width: 5rem;
        height: 5rem;
        background: linear-gradient(
          135deg,
          var(--lila-deep),
          var(--lila-intense)
        );
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        color: white;
        animation: float 8s ease-in-out infinite;
        box-shadow: 0 10px 25px rgba(139, 92, 246, 0.3);
      }

      .story-icon.gold {
        background: linear-gradient(
          135deg,
          var(--dorado-dark),
          var(--dorado-deep)
        );
        box-shadow: 0 10px 25px rgba(245, 158, 11, 0.3);
      }

      .story-icon.emerald {
        background: linear-gradient(135deg, #34d399, #10b981);
        box-shadow: 0 10px 25px rgba(52, 211, 153, 0.3);
      }

      .story-icon.rose {
        background: linear-gradient(135deg, #fb7185, #e11d48);
        box-shadow: 0 10px 25px rgba(251, 113, 133, 0.3);
      }

      .story-card.featured {
        border: 3px solid rgba(139, 92, 246, 0.3);
        transform: scale(1.03);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
      }

      .story-card.featured::before {
        background: linear-gradient(
          90deg,
          var(--lila-deep),
          var(--dorado-dark),
          var(--lila-deep)
        );
        height: 8px;
        animation: shimmer 3s ease-in-out infinite;
      }

      .story-icon svg {
        width: 2.5rem;
        height: 2.5rem;
      }

      .story-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 1.5rem;
        line-height: 1.3;
      }

      .story-text {
        color: #4b5563;
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
      }

      .story-text strong {
        color: var(--lila-darkest);
        font-weight: 600;
      }

      .story-text em {
        color: var(--dorado-intense);
        font-style: italic;
        font-weight: 500;
      }

      .story-timeline {
        background: linear-gradient(
          135deg,
          var(--lila-light),
          var(--lila-medium)
        );
        color: var(--lila-darkest);
        padding: 0.75rem 1.5rem;
        border-radius: 30px;
        font-size: 0.9rem;
        font-weight: 700;
        display: inline-block;
        letter-spacing: 0.5px;
        animation: twinkle 5s ease-in-out infinite;
      }

      .story-timeline.gold {
        background: linear-gradient(
          135deg,
          var(--dorado-light),
          var(--dorado-medium)
        );
        color: var(--dorado-darkest);
      }

      .story-timeline.emerald {
        background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        color: #065f46;
      }

      .story-timeline.purple {
        background: linear-gradient(
          135deg,
          var(--lila-light),
          var(--lila-medium)
        );
        color: var(--lila-darkest);
      }

      .story-timeline.rose {
        background: linear-gradient(135deg, #fce7f3, #fbcfe8);
        color: #be185d;
      }

      .philosophy-section {
        margin-bottom: 6rem;
        opacity: 0;
        animation: fadeInUp 1s ease-out 2s forwards;
      }

      .philosophy-header {
        text-align: center;
        margin-bottom: 4rem;
      }

      .philosophy-title {
        font-size: 3rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 1rem;
      }

      .philosophy-subtitle {
        font-size: 1.8rem;
        background: linear-gradient(
          135deg,
          var(--dorado-deep) 0%,
          var(--dorado-intense) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .philosophy-content {
