<style>
  :root {
    --lila: #a25ccf;
    --lila-dark: #8b49ba;
    --dorado: #d4af37;
    --blanco: #ffffff;
    --fuente: "Poppins", sans-serif;
    --suave: #fdf9ff;
    --linea: #e8d9f6;
    --sombra: 0 4px 30px rgba(162, 92, 207, 0.1);
  }

  body {
    margin: 0;
    font-family: var(--fuente);
    background-color: var(--suave);
  }

  .servicios {
    background: radial-gradient(circle at top left, #fff1ff, #fdfbff);
    padding: 100px 24px 80px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .servicios::before,
  .servicios::after {
    content: "";
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(var(--dorado), transparent);
    opacity: 0.06;
    animation: flotar 10s infinite ease-in-out;
  }

  .servicios::before {
    top: -80px;
    left: -80px;
  }

  .servicios::after {
    bottom: -80px;
    right: -80px;
  }

  .servicios h2 {
    color: var(--lila);
    font-size: 3.2rem;
    margin-bottom: 12px;
    font-weight: 600;
    position: relative;
    animation: fadeInDown 1s ease-in-out;
  }

  .servicios h2::after {
    content: "";
    width: 80px;
    height: 4px;
    background: var(--dorado);
    position: absolute;
    bottom: -16px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 2px;
  }

  .intro {
    color: #6a6a6a;
    font-size: 1.2rem;
    margin-bottom: 48px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeIn 1.2s ease-in-out;
  }

  .accordion details {
    background: #fff;
    border: 1px solid var(--linea);
    border-radius: 18px;
    box-shadow: var(--sombra);
    margin-bottom: 28px;
    overflow: hidden;
    transition: all 0.4s ease;
    position: relative;
  }

  .accordion details[open] {
    transform: scale(1.01);
    border-color: var(--lila);
  }

  .accordion summary {
    background: linear-gradient(90deg, var(--dorado), var(--lila));
    color: var(--blanco);
    font-size: 1.6rem;
    padding: 22px 30px;
    cursor: pointer;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background 0.3s;
  }

  .accordion summary:hover {
    filter: brightness(1.08);
  }

  .accordion ul {
    list-style: none;
    margin: 0;
    padding: 32px 20px;
    animation: fadeIn 0.6s ease-in-out;
  }

  .accordion li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding: 18px 24px;
    background: var(--blanco);
    border-left: 6px solid var(--lila);
    border-radius: 14px;
    font-size: 1.1rem;
    color: #333;
    box-shadow: 0 2px 10px rgba(162, 92, 207, 0.08);
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  .accordion li:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 16px rgba(162, 92, 207, 0.15);
  }

  .accordion li span {
    text-align: left;
    flex: 1;
    font-weight: 500;
    line-height: 1.6;
    color: #4a4a4a;
  }

  .accordion li .precio {
    color: var(--dorado);
    font-size: 1rem;
    font-weight: 600;
    display: block;
    margin-top: 4px;
  }

  .accordion li a {
    background: var(--lila);
    color: var(--blanco);
    text-decoration: none;
    padding: 10px 22px;
    border-radius: 30px;
    font-size: 0.95rem;
    transition: all 0.3s;
    font-weight: 500;
    box-shadow: 0 4px 10px rgba(162, 92, 207, 0.12);
  }

  .accordion li a:hover {
    background: var(--lila-dark);
    transform: scale(1.05);
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes flotar {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @media (max-width: 600px) {
    .accordion li {
      flex-direction: column;
      gap: 12px;
      text-align: center;
    }
  }
  html,
  body {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* Internet Explorer 10+ */
  }

  body::-webkit-scrollbar {
    display: none; /* Chrome, Safari y Opera */
  }
</style>
