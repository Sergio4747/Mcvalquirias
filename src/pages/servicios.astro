<script>
  document.addEventListener("DOMContentLoaded", function () {
    const cards: NodeListOf<Element> =
      document.querySelectorAll(".service-card");
    let particleObserver: IntersectionObserver | undefined;

    cards.forEach((card) => {
      const header = card.querySelector<HTMLElement>(".card-header");
      const expandBtn = card.querySelector<HTMLElement>(".expand-btn");

      if (header) {
        header.addEventListener("click", function (e) {
          e.preventDefault();
          toggleCard(card, cards);
        });

        if (expandBtn) {
          expandBtn.addEventListener("keydown", function (e) {
            if (e.key === "Enter" || e.key === " ") {
              e.preventDefault();
              toggleCard(card, cards);
            }
          });
        }
      }
    });

    function toggleCard(targetCard: Element, allCards: NodeListOf<Element>) {
      allCards.forEach((otherCard) => {
        if (otherCard !== targetCard) {
          otherCard.classList.remove("expanded");
        }
      });

      targetCard.classList.toggle("expanded");

      const isExpanded = targetCard.classList.contains("expanded");
      const expandBtn = targetCard.querySelector(".expand-btn");
      if (expandBtn) {
        expandBtn.setAttribute("aria-expanded", isExpanded.toString());
      }
    }

    let ticking = false;

    window.addEventListener(
      "scroll",
      function () {
        if (!ticking) {
          requestAnimationFrame(() => {
            const scrolled = window.pageYOffset;
            const particles = document.querySelectorAll(".particle");

            particles.forEach((particle, index) => {
              if (particle instanceof HTMLElement) {
                const speed = 0.3 + index * 0.05;
                particle.style.transform = `translateY(${scrolled * speed}px)`;
              }
            });
            ticking = false;
          });
          ticking = true;
        }
      },
      { passive: true }
    );

    const observerOptions: IntersectionObserverInit = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver(function (entries) {
      entries.forEach((entry) => {
        if (entry.isIntersecting && entry.target instanceof HTMLElement) {
          entry.target.style.animationPlayState = "running";
        }
      });
    }, observerOptions);

    cards.forEach((card) => {
      observer.observe(card);
    });

    const expandBtns = document.querySelectorAll(".expand-btn");
    expandBtns.forEach((btn) => {
      btn.setAttribute("aria-expanded", "false");
    });

    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    );
    if (!prefersReducedMotion.matches) {
      particleObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          const particles = entry.target.querySelectorAll(".particle");
          particles.forEach((particle) => {
            if (particle instanceof HTMLElement) {
              particle.style.animationPlayState = entry.isIntersecting
                ? "running"
                : "paused";
            }
          });
        });
      });

      const particlesContainer = document.querySelector(".particles");
      if (particlesContainer) {
        particleObserver.observe(particlesContainer);
      }
    }

    const reserveButtons: NodeListOf<HTMLButtonElement> =
      document.querySelectorAll(".reserve-btn");
    reserveButtons.forEach((btn) => {
      btn.addEventListener("click", function () {
        const span = btn.querySelector("span");
        if (span) {
          const originalText = span.textContent;
          span.textContent = "Cargando...";

          setTimeout(() => {
            span.textContent = originalText;
          }, 1000);
        }
      });
    });

    let resizeTimeout: number;
    window.addEventListener(
      "resize",
      function () {
        clearTimeout(resizeTimeout);
        resizeTimeout = window.setTimeout(() => {
          const expandedCards = document.querySelectorAll(
            ".service-card.expanded"
          );
          expandedCards.forEach((card) => {
            const content = card.querySelector(".card-content");
            if (content instanceof HTMLElement) {
              content.style.maxHeight = "none";
              const height = content.scrollHeight;
              content.style.maxHeight = "0";
              requestAnimationFrame(() => {
                content.style.maxHeight = `${height}px`;
              });
            }
          });
        }, 250);
      },
      { passive: true }
    );

    if ("ontouchstart" in window) {
      const touchElements: NodeListOf<HTMLElement> = document.querySelectorAll(
        ".reserve-btn, .expand-btn, .card-header"
      );

      touchElements.forEach((element) => {
        if (element instanceof HTMLElement) {
          element.addEventListener(
            "touchstart",
            () => {
              element.style.transform = "scale(0.95)";
            },
            { passive: true }
          );

          element.addEventListener(
            "touchend",
            () => {
              setTimeout(() => {
                element.style.transform = "";
              }, 150);
            },
            { passive: true }
          );
        }
      });
    }

    const preloadImages = () => {
      const imageUrls = ["/img/logoimg.png"];
      imageUrls.forEach((url) => {
        const link = document.createElement("link");
        link.rel = "preload";
        link.as = "image";
        link.href = url;
        document.head.appendChild(link);
      });
    };

    if (document.readyState === "complete") {
      preloadImages();
    } else {
      window.addEventListener("load", preloadImages);
    }

    window.addEventListener("error", function (e: Event) {
      if (e.target instanceof HTMLImageElement) {
        console.warn("Failed to load image:", e.target.src);
      }
    });

    window.addEventListener("beforeunload", function () {
      observer.disconnect();
      if (particleObserver) {
        particleObserver.disconnect();
      }
    });
  });
</script>
